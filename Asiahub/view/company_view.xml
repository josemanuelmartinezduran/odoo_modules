<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<!-- Modificaciones a la vista:	Company Form -->
		<record id="jmd_compny_edit" model="ir.ui.view">
			<field name="name">jmd.company.edit</field>
			<field name="model">res.company</field>
			<field name="inherit_id" ref="meli_oerp-master.view_company_page_mercadolibreb"/>
			<field name="arch" type="xml">
				<xpath expr="//page[@string='MercadoLibre']" position="after">
					<page string="CNova" >
						<group>
							<field name="cnova_client_id" />
							<field name="cnova_accesstoken" />
							<field name="cnova_url" />
						</group>
					</page>
					<page string="CBT">
						<field name="cbt_username" />
						<field name="cbt_passwd" />
						<field name="cbt_accesstoken" />
					</page>
				</xpath>
			</field>
		</record>
	</data>
</openerp>